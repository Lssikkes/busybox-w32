# If job control is disabled, skip the test ("User defined signal 2" text not emitted)
test "`type jobs`" = "jobs is a shell builtin" || exit 77

# avoid ugly warnings about signals not being caught
trap ":" USR1 USR2

"$THIS_SH" -c '
trap "echo caught" USR2
echo "sending USR2"
kill -USR2 $$

trap "" USR2
echo "sending USR2"
kill -USR2 $$

trap "-" USR2
echo "sending USR2"
kill -USR2 $$

echo "not reached"
'

trap "-" USR1 USR2
